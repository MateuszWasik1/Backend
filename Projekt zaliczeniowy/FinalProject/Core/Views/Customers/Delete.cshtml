@model Core.Entities.Customers

@{
    ViewData["Title"] = "Delete";
}

<h1>Usuń klienta</h1>

<h3>Jesteś pewny, że chcesz usunąć klienta z systemu? Może to spowodować błędy.</h3>
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            <span>Imię klienta:</span>
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.CFirstName)
        </dd>
        <dt class="col-sm-2">
            <span>Nazwisko klienta:</span>
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.CLastName)
        </dd>
        <dt class="col-sm-2">
            <span>Numer karty klienta:</span>
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.CCardCode)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="CId" />
        <input type="submit" value="Usuń" class="btn btn-danger" />
        <a asp-action="Index">Powrót do listy klientów</a>
    </form>
</div>
