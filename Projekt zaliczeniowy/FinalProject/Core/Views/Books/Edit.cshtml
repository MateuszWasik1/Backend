@model Core.Entities.Books

@{
    ViewData["Title"] = "Edit";
}

<h1>Edytuj książkę</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="BId" />
            <div class="form-group">
                <label class="control-label">Tytuł książki:</label>
                <input asp-for="BTitle" class="form-control" />
                <span asp-validation-for="BTitle" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Numer ISBN książki:</label>
                <input asp-for="BISBN" class="form-control" />
                <span asp-validation-for="BISBN" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Data publikacji:</label>
                <input asp-for="BPublishDate" class="form-control" />
                <span asp-validation-for="BPublishDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Zapisz" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Powrót do listy książek</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
