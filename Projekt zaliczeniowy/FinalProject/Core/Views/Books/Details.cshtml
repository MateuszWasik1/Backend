@model Core.Entities.Books

@{
    ViewData["Title"] = "Details";
}

<h1>Szczegóły książki</h1>

<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            <span>Tytuł książki:</span>
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.BTitle)
        </dd>
        <dt class="col-sm-2">
            <span>Numer ISBN książki:</span>
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.BISBN)
        </dd>
        <dt class="col-sm-2">
            <span>Data publikacji:</span>
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.BPublishDate)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.BId">Edytuj</a>
    <a asp-action="Index">Powrót do listy książek</a>
</div>
