@model IEnumerable<Core.Entities.Books>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.BTitle)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BISBN)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BPublishDate)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.BTitle)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.BISBN)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.BPublishDate)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.BId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.BId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.BId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
