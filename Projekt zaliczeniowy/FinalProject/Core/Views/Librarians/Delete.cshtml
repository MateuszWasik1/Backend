@model Core.Entities.Librarians

@{
    ViewData["Title"] = "Delete";
}

<h1>Usuń bibliotekarza</h1>

<h3>Jesteś pewny, że chcesz usunąć klienta z systemu? Może to spowodować błędy.</h3>
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            <span>Imię bibliotekarza:</span>
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.LFirstName)
        </dd>
        <dt class="col-sm-2">
            <span>Nazwisko bibliotekarza:</span>
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.LLastName)
        </dd>
        <dt class="col-sm-2">
            <span>Email bibliotekarza:</span>
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.LEmail)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="LId" />
        <input type="submit" value="Usuń" class="btn btn-danger" />
        <a asp-action="Index">Powrót do listy bibliotekarzy</a>
    </form>
</div>
