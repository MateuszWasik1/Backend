@model Core.Entities.Authors

@{
    ViewData["Title"] = "Delete";
}

<h1>Usuń autora</h1>

<h3>Jesteś pewny, że chcesz usunąć autora z systemu? Może to spowodować błędy.</h3>
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            <span>GUID Autora:</span>
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.AGID)
        </dd>
        <dt class="col-sm-2">
            <span>Pierwsze imię:</span>
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.AFirstName)
        </dd>
        <dt class="col-sm-2">
            <span>Drugie imię:</span>
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.AMiddleName)
        </dd>
        <dt class="col-sm-2">
            <span>Nazwisko:</span>
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ALastName)
        </dd>
        <dt class="col-sm-2">
            <span>Pełne imię:</span>
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.AFullName)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="AId" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index">Back to List</a>
    </form>
</div>
