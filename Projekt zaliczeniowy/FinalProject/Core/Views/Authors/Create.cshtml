@model Core.Entities.Authors

@{
    ViewData["Title"] = "Create";
}

<h1>Dodaj autora</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label class="control-label">GUID Autora:</label>
                <input asp-for="AGID" class="form-control" />
                <span asp-validation-for="AGID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Pierwsze imię:</label>
                <input asp-for="AFirstName" class="form-control" />
                <span asp-validation-for="AFirstName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Drugie imię:</label>
                <input asp-for="AMiddleName" class="form-control" />
                <span asp-validation-for="AMiddleName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Nazwisko:</label>
                <input asp-for="ALastName" class="form-control" />
                <span asp-validation-for="ALastName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Pełne imię:</label>
                <input asp-for="AFullName" class="form-control" />
                <span asp-validation-for="AFullName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Dodaj" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Powrót do listy autorów</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
